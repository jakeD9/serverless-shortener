{
  "extends": "@tsconfig/node14",
  "include": ["stacks", "src"],
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "module": "CommonJS",
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
